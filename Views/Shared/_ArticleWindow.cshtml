@model GitBlog.Models.Article

<div class=" m-2 col-lg-4 col-md-6 pb-4 filter @Model.Category.Name.Replace(' ', '_')">
    <div class="card bg-white rounded shadow-sm" style="border:1px solid #222">
        <div class="card-body px-3 pt-3 pb-1 row text-center">
            <div class="col-8 border-dark p-1"> <h6> @Model.Name </h6> </div>
            <div class="col-4">
                <span class="badge p-2 border w-100 bg-dark text-light">@Model.Category.Name</span>
            </div>
        </div>
        <img class="card-img-top img-fluid d-block mx-auto mb-3" src="@WC.ArticlesImagePath@Model.Image" alt="Card image cap">
        <div class="card-body p-1 px-3 row">
            <div class="col-12 pt-2 text-center" style="font-size:13px; text-align:justify">
                <p> @Model.ShortDesccription</p>
            </div>
            <div class="col-12 p-1">
                <a asp-action="Details" asp-route-id="@Model.Id" class="btn btn-dark form-control btn-sm p-2" style="height:40px">View Details</a>
            </div>
        </div>
    </div>
</div>
