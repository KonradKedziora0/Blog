@model GitBlog.Models.ViewModels.DetailsVM

<div class="">
    <form method="post">
        <input asp-for="@Model.Article.Id" hidden />
        <div class="container backgroundWhite pt-4">
            <div class="card" style="border:1px solid #000000; ">
                <div class="card-header bg-dark text-light ml-0 row container" style="border-radius: 0px;">
                    <div class="col-12 col-md-12 text-center">
                        <h1 class="text-white"> @Model.Article.Name </h1>
                    </div>
                </div>
                <div class="card-body">
                    <div class="container rounded p-2">
                        <div class="">

                            <img src="@WC.ArticlesImagePath@Model.Article.Image" width="100%" class="rounded col-12 col-lg-6 p-1 text-center float-left m-lg-1" />


                            <div class="col-12 col-lg-12 ">
                                <span class="badge p-2 m-2 border bg-dark text-light" >@Model.Article.Category.Name</span>
                                <h3 class="text-success"></h3>

                                <p class="text-secondary p-1">@Html.Raw(Model.Article.ContentOfArticle)</p>
                            </div>

                        </div>
                    </div>
                </div>
                <div class="card-footer bg-dark">
                    <div class="float-right text-white-50">
                      Author:   @Model.Article.Author
                    </div>
                </div>
            </div>
        </div>
    </form>
</div>