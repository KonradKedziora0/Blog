@model IEnumerable<Article>

<div class="container p-3">
    <div class="row pt-4">
        <div class="col-6">
            <h2 class="text-dark">Articles</h2>
        </div>
        <div class="col-6 text-right">
            <a asp-action="Upsert" class="btn btn-dark">
                <i class="fas fa-plus"></i>  Create new article
            </a>
        </div>
    </div>


    <br />    <br />

    @if (Model.Count() > 0)
    {
        <table class="table table-bordered table-striped" style="width:100%">
            <thead>
                <tr>
                    <th>
                        Name
                    </th>
                    <th>
                        Author
                    </th>
                    <th>
                        Subtitle
                    </th>
                    <th>
                        Category
                    </th>
                    <th>

                    </th>
                </tr>
            </thead>
            <tbody>
                @foreach (var obj in Model)
                {
                <tr>
                    <td width="15%">
                        @obj.Name
                    </td>
                    <td width="15%">
                        @obj.Author
                    </td>
                    <td width="30%">
                        @obj.ShortDesccription
                    </td>
                    <td width="20%">
                        @obj.Category.Name
                    </td>
                    <td class="text-center">
                        <div class="w-75 btn-group" role="group">
                            <a asp-route-Id="@obj.Id" asp-action="Upsert" class="btn btn-primary mx-2">
                                <i class="fas fa-edit"></i>
                            </a>
                            <a asp-route-Id="@obj.Id" asp-action="Delete" class="btn btn-danger mx-2">
                                <i class="fas fa-trash-alt"></i>
                            </a>
                        </div>
                    </td>
                </tr>
                }
            </tbody>
        </table>
    }
    else
    {
        <p>No articles exists</p>
    }

</div>