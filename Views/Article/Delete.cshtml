@model GitBlog.Models.Article

<form method="post">

    <div class=" border p-3">
        <div class="form-group row">
            <h3 class="text-dark pl-3">Delete article</h3>
        </div>
        <div class="row">
            <div class="col-8">
                <div class="form-group row">
                    <div class="col-4">
                        <label asp-for="Name"></label>
                    </div>
                    <div class="col-8">
                        <input asp-for="Name" readonly class="form-control" />
                    </div>

                </div>
                <div class="form-group row">
                    <div class="col-4">
                        <label asp-for="ContentOfArticle"></label>
                    </div>
                    <div class="col-8">
                        <textarea asp-for="ContentOfArticle" disabled class="form-control"> </textarea>
                    </div>

                </div>


                <div class="form-group row">
                    <div class="col-4">
                        <label asp-for="CategoryId"></label>
                    </div>
                    <div class="col-8">
                        <input asp-for="Category.Name" readonly class="form-control" />
                    </div>
                </div>

                <div class="form-group row">
                    <div class="col-4">
                        <label asp-for="Author"></label>
                    </div>
                    <div class="col-8">
                        <input asp-for="Author" readonly class="form-control" />
                    </div>

                </div>
                <div class="form-group row">
                    <div class="col-8 offset-4 row">

                        <div class="col">
                            <button type="submit" class="btn btn-danger w-100">Delete</button>
                        </div>
                        <div class="col">
                            <a asp-action="Index" class="btn btn-success w-100"><i class="fas fa-arrow-left"></i>  Back</a>
                        </div>
                    </div>
                </div>

            </div>

            <div class="col-4 pt-4">

                @* Keep this empty *@
                @if (Model.Id != 0)
                {
                    <img src="@WC.ArticlesImagePath@Model.Image" class="w-100" width="100%" style="border-radius:5px; border: 1px solid #bbb" />
                }
            </div>
        </div>
    </div>
</form>


@section Scripts{

    @{
        <partial name="_ValidationScriptsPartial" />
    }
    <script>
        $(document).ready(function () {
            $('.summernote').summernote({
                height: 250,
                disable: true
            });

        });
    </script>

}
